<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @beer.name %>
</p>

<p>
  <strong>Style:</strong>
  <%= @beer.style %>
</p>

<p>
  <strong>Brewery:</strong>
  <%= @beer.brewery.name %>
</p>

<% if @beer.ratings.empty? %>
  <p>not yet rated</p>
<% else %>
  <p>Has <%= @beer.ratings.count %> <%= "rating".pluralize(@beer.ratings.count) %>, average <%= @beer.average_rating %></p>
<% end %>

<p>
  <%= link_to 'List of breweries', breweries_path %>
</p>

<%= link_to 'Edit | ', edit_beer_path(@beer) if current_user %>
<%= link_to 'Back', beers_path %>

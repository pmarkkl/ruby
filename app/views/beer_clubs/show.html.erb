<p id="notice"><%= notice %></p>

<h2><%= @beer_club.name %> (<%= @beer_club.city %>)</h2>

<p>
  Founded in <%= @beer_club.founded %>
</p>

<p>
  <h2>Members</h2>
  <ul>
  <% @beer_club.memberships.each do |membership| %>
    <li><%= link_to membership.user.username, membership.user %></li>
  <% end %>
  </ul>
</p>

<%= link_to 'Edit', edit_beer_club_path(@beer_club) if current_user %><br />
<%= link_to 'Destroy', @beer_club, method: :delete, data: { confirm: 'Are you sure?' } if current_user %>

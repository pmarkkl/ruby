<h1>Beer places search</h1>

<p id="notice"><%= notice %></p>

<%= form_tag places_path do %>
  city <%= text_field_tag :city, params[:city] %>
  <%= submit_tag "Search" %>
<% end %>
<p>
</p>
<% if @places %>
  <p>
    current weather in <%= @weather["location"]["name"] %><br />
    <p><%= @weather["current"]["temp_c"]%> Celsius</p>
    <img src="http://<%= @weather["current"]["condition"]["icon"] %>" />
    <p><b>wind: </b><%= @weather["current"]["wind_kph"] %>/sec, direction <%= @weather["current"]["wind_dir"]%></p>
  </p>
  <table>
  <thead>
    <th>id</th>
    <th>name</th>
    <th>status</th>
    <th>street</th>
    <th>city</th> 
    <th>zip</th> 
    <th>country</th> 
    <th>overall</th>               
  </thead>
  <% @places.each do |place| %>
    <tr>
      <td><%= place.id %></td>
      <td><%= link_to place.name, place_path(place.id) %></td>
      <td><%= place.status %></td>
      <td><%= place.street %></td>
      <td><%= place.city %></td> 
      <td><%= place.zip %></td> 
      <td><%= place.country %></td> 
      <td><%= place.overall %></td>        
    </tr>
  <% end %>
  </table>
<% end %>